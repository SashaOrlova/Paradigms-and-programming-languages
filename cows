
#include "optimization.h"
#include <iostream>
#include <iomanip>
#include <cstdio>
using namespace std;

int count_stalls(int * coor, int sz, int len) {
    int j = 0, stall = 1;
    for (int i = 0; i < sz; i++) {
        if (coor[i] - coor[j] >= len) {
            stall += 1;
            j = i;
        }
    }

    return stall;
}


int main(){
	freopen("cows.in", "r", stdin);
	freopen("cows.out", "w", stdout);

	int num_stall = readInt(),
        num_cow = readInt();

    int * coor = new int[10001];
    for (int i = 0; i < num_stall; i++) {
        coor[i] = readInt();
    }

    int left = 0, right = 1e9;
    int middle;

	while (right - left > 1) {
        middle = left + (right - left) / 2;

        if (num_cow <= count_stalls(coor, num_stall, middle)) {
            left = middle;
        } else {
            right = middle;
        }
	}
    writeInt(left);

	return 0;

}
